---
title: DuniaPay - Transfer details

pageClassName: p-transfer-details
---
extends shared/_layout


block header
  include ./components/_header

block aside
  include ./components/_aside

block sidebar
  include ./components/_sidebar

block modal
  include ./components/_details-modal

block content
  div.body.body--start(class!= pageClassName)

    .wrapper
      main#main.main
        .section__wrapper
          .section__title
            p!= "New transfer"

          .section__scroll

            a(href="#personalDetails" data-effect='mfp-zoom-in' popup-js style='display:block;padding: 50px;')!= "Just for show - open modal"

            a.section__btn(href="#" class="" title="")
              +iconSVG('plus')


      section#section.section
        .section__wrapper
          .section__title
            p!= "Contacts list"

          .section__scroll
            include ./components/_info

          .section__row-bottom.section__info
            .section__info-wrapper
              div
                +iconSVG('logo')
              div
                p.section__info-title
                  span!= "Get a free transfer"
                  +iconSVG('arrow-lg')
                p.section__info-description!= "Share with friends and<br>get your next transfer free"
