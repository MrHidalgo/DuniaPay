// DETAILS MODAL :: START

mixin modalContentDetails()
  form.c-form.c-form--details(action="" method="" autocomplete="off")
    .modal__header
      p!= "personal Details"
    .modal__body
      .c-form__group.c-form__group--two
        .c-form__group-col.c-form__group-col-0
          +formInput(dataFormObj.inputDetailsFirstName)
        .c-form__group-col.c-form__group-col-1
          +formInput(dataFormObj.inputDetailsLastName)

      .c-form__group.c-form__group--three
        .c-form__group-col.c-form__group-col-0
          +formSelectCustom(dataFormObj.selectFieldCustomBirthday)
        .c-form__group-col.c-form__group-col-1
          +formSelectCustom(dataFormObj.selectFieldCustomGender)
        .c-form__group-col.c-form__group-col-2
          +formInput(dataFormObj.inputDetailsMobile)

      +formInput(dataFormObj.inputDetailsAddress)

      .c-form__group.c-form__group--two
        .c-form__group-col.c-form__group-col-0
          +formInput(dataFormObj.inputDetailsCity)
        .c-form__group-col.c-form__group-col-1
          +formSelectCustom(dataFormObj.selectFieldCustomState)

    .modal__footer
      +formBtn('', '', 'Continue')


+modal('personalDetails', 'modalContentDetails')

// DETAILS MODAL :: END